<%=form_for @post do |p|%>
    <p>
    <%=p.label :title%>
    <%=p.text_field :title%>
    </p>
    <p>
    <%=p.label :content%>
    <%=p.text_area :content%>
    </p>

    <%=p.collection_check_boxes :category_ids, Category.all, :id, :name%>

    <%=p.fields_for :categories, @post.categories.build do |category_attr|%>
        <%=category_attr.text_field :name%>
    <%end%>


    <%=p.submit%>
<%end%>
